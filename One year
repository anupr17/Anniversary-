  function show(id) {
    document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
    document.getElementById(id).classList.add('active');
  }
  function goYes() { show('giftsPage'); }
  function goNo() { show('noPage'); }
  function backHome() { show('page1'); }
  function openGift(id) { show(id); }
</script></body>
